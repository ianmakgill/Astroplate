---
import Base from "@/layouts/Base.astro";
import LandingPage from "@/layouts/LandingPage.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { render } from "astro:content";

// get static paths for all landing pages
export async function getStaticPaths() {
  const COLLECTION_FOLDER = "landing-pages";

  const landingPages = await getSinglePage(COLLECTION_FOLDER);

  const paths = landingPages.map((page) => ({
    params: {
      landing: page.id,
    },
    props: { page },
  }));
  return paths;
}

const { page } = Astro.props;
const { title, meta_title, description, image } = page.data;
const { Content } = await render(page);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <LandingPage data={page.data}>
    <Content />
  </LandingPage>
</Base>
