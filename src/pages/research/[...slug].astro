---
import Base from "@/layouts/Base.astro";
import ResearchPage from "@/layouts/ResearchPage.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { render } from "astro:content";

// get static paths for all research pages
export async function getStaticPaths() {
  const COLLECTION_FOLDER = "research";

  const researchPages = await getSinglePage(COLLECTION_FOLDER);

  const paths = researchPages.map((page) => ({
    params: {
      slug: page.id,
    },
    props: { page },
  }));
  return paths;
}

const { page } = Astro.props;
const { title, meta_title, description, image } = page.data;
const { Content, headings } = await render(page);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <ResearchPage data={page.data} headings={headings}>
    <Content />
  </ResearchPage>
</Base>
